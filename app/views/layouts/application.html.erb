<!DOCTYPE html>
<html>
<head>
  <title>ElecCalcs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Electrical Calcs</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if !session[:user_id].nil? %>
            <li><a href="/">Dashboard</a></li>
            <li><%= link_to "Settings", edit_user_path(session[:user_id]) %></li>
            <li> <p class="navbar-text"><%= session[:user_name].upcase %> &nbsp;
           <%= link_to "Logout", {controller: "users", action: "logout"} %>
                      <% else %>
       <li> <%= link_to "Login", {controller: "users", action: "index"} %></li>
         <%end%>
          </ul>
          <form class="navbar-form navbar-right">
            <input type="text" class="form-control" placeholder="Search...">
          </form>
        </div>
      </div>
    </nav>
    
<%= yield %>

</body>
</html>
